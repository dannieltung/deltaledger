<div class="home-container">
  <div class="home-card">
    <div class="home-header">
      <i class="bi bi-graph-up-arrow home-logo"></i>
      <h1>DeltaLedger</h1>
      <p>Sua plataforma completa para acompanhamento e análise de operações de trading</p>
    </div>

    <div class="home-features">
      <div class="feature-item">
        <i class="bi bi-bar-chart-line feature-icon"></i>
        <p class="feature-title">Análise de Trading</p>
      </div>
      <div class="feature-item">
        <i class="bi bi-shield-check feature-icon"></i>
        <p class="feature-title">Segurança</p>
      </div>
      <div class="feature-item">
        <i class="bi bi-speedometer2 feature-icon"></i>
        <p class="feature-title">Performance</p>
      </div>
    </div>

    <div class="home-actions">
      <% if user_signed_in? %>
        <%= link_to "Dashboard", root_path, class: "home-btn primary" %>
        <%= link_to "Sair", destroy_user_session_path, data: { turbo_method: :delete }, class: "home-btn secondary" %>
      <% else %>
        <%= link_to "Criar Conta", new_user_registration_path, class: "home-btn primary" %>
        <%= link_to "Entrar", new_user_session_path, class: "home-btn secondary" %>
      <% end %>
    </div>
  </div>
</div>
