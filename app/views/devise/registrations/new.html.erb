<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <i class="bi bi-person-plus-fill auth-icon"></i>
      <h2>Criar Conta</h2>
      <p>Comece sua jornada no DeltaLedger</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { class: 'auth-form' }) do |f| %>
      <% if f.error_notification %>
        <div class="auth-error-notification">
          <%= f.error_notification %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "seu@email.com" },
                    wrapper: false,
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="form-group">
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "Crie uma senha forte" },
                    wrapper: false,
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmação de senha",
                    input_html: { autocomplete: "new-password", placeholder: "Confirme sua senha" },
                    wrapper: false,
                    label_html: { class: 'form-label' } %>
      </div>

      <%= f.button :submit, "Criar Conta", class: "auth-submit" %>
    <% end %>

    <hr class="auth-divider">

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
