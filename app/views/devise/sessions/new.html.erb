<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <i class="bi bi-shield-lock auth-icon"></i>
      <h2>Bem-vindo de volta</h2>
      <p>Entre com suas credenciais</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: user_session_path, html: { class: 'auth-form' }) do |f| %>
      <div class="form-group">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "seu@email.com" },
                    wrapper: false,
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="form-group">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", placeholder: "Sua senha" },
                    wrapper: false,
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="auth-remember-forgot">
        <% if devise_mapping.rememberable? %>
          <div class="auth-checkbox">
            <%= f.input :remember_me,
                        as: :boolean,
                        wrapper: false,
                        label: "Lembrar-me" %>
          </div>
        <% end %>

        <%- if devise_mapping.recoverable? %>
          <%= link_to "Esqueceu a senha?", new_user_password_path %>
        <% end %>
      </div>

      <%= f.button :submit, "Entrar", class: "auth-submit" %>
    <% end %>

    <hr class="auth-divider">

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
